@model LoginViewModel;

@{
    ViewData["Title"] = "فرم ورود اطلاعات";
}

<link href="~/css/syncfusioncomponentstyle.css" rel="stylesheet" />

<section id="auth-login" class="row flexbox-container">
    <div class="col-xl-8 col-11">
        <div class="card bg-authentication mb-0">
            <div class="row m-0" style="background-color: white;">
                <!-- left section-login -->
                <div class="col-md-6 col-12 px-0">
                    <div class="card disable-rounded-right h-100 d-flex justify-content-center mb-0 p-2">
                        <div class="card-header pb-1">
                            <div class="card-title">
                                <h4 class="mb-2 text-center">سيستم جامع حقوق و دستمزد</h4>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body">

                                <form method="post" action="/Account/Login">
                                    <div class="form-group mb-50">
                                        <ejs-textbox ejs-for="UserName" floatLabelType="Auto" placeholder="نام کاربری" cssClass="publicLoginClass"></ejs-textbox>

                                    </div>
                                    <div class="form-group">

                                        <ejs-textbox ejs-for="Password" type="Password" floatLabelType="Auto" placeholder="کلمه عبور" cssClass="publicLoginClass"></ejs-textbox>
                                    </div>

                                    <span id="spnvalidate" class="text text-danger"></span>
                                    @* <button type="submit" class="btn btn-primary glow w-100 position-relative">ورود <i id='icon-arrow' class='bx bx-left-arrow-alt'></i></button> *@

                                    <ejs-button id="submit" typeof="submit" class="e-icons e-large" iconCss="e-icons e-arrow-left e-large" title="ورود" iconPosition="Right" cssClass="e-outline btn glow w-100 rounded-2 publicLoginClass color-btn" content="ورود"></ejs-button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- right section image -->
                <div class="col-md-6 d-md-block d-none align-self-center p-3 text-center">
                    <div class="card-content">
                        <img class="img-fluid" src="~/assets/images/pages/payrolllogo.png" alt="branding logo">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>