
<!DOCTYPE html>

<html class="loading" lang="fa" data-textdirection="rtl" dir="rtl">
<!-- BEGIN: Head-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>حقوق و دستمزد مهدی - @ViewData["AdminTitle"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/icon/favicon.ico">
    <meta name="theme-color" content="#5A8DEE">

    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/vendors/css/charts/apexcharts.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/vendors/css/extensions/swiper.min.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/vendors/css/ui/material.css"/>
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/bootstrap-extended.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/colors.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/components.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/themes/dark-layout.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/themes/semi-dark-layout.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/assets/fontawesome-pro-5.8.2-web/css/fontawesome-pro-5.8.2.css">

    <!-- Syncfusion ASP.NET Core controls styles -->
    <link rel="stylesheet" asp-append-version="true" href="https://cdn.syncfusion.com/ej2/29.1.33/material.css"/>

</head>
<!-- END: Head-->
<!-- BEGIN: Body-->
<body class="vertical-layout vertical-menu-modern semi-dark-layout 2-columns navbar-sticky footer-static" data-open="click" data-menu="vertical-menu-modern" data-col="2-columns" data-layout="semi-dark-layout">

<div class="header-navbar-shadow"></div>

<partial name="_RightMenu"/>
<partial name="_ExtensionMenu"/>

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        @RenderBody()
    </div>
</div>


<div class="sidenav-overlay"></div>
<div class="drag-target"></div>

<!--modal when ajax request is sending-->
<div class="modal"></div>

<!-- BEGIN: Footer-->
<footer class="footer footer-static footer-light">
    <p class="clearfix mb-0">
        <button class="btn btn-primary btn-icon scroll-top" type="button">
            <i class="bx bx-up-arrow-alt"></i>
        </button>
    </p>
</footer>
<!-- END: Footer-->
<!-- BEGIN: Vendor JS-->

<!-- Syncfusion ASP.NET Core controls scripts -->
<script asp-append-version="true" src="https://cdn.syncfusion.com/ej2/29.1.33/dist/ej2.min.js"></script>
<script asp-append-version="true" src="~/assets/vendors/js/vendors.min.js"></script>
<script asp-append-version="true" src="~/assets/fonts/LivIconsEvo/js/LivIconsEvo.tools.min.js"></script>
<script asp-append-version="true" src="~/assets/fonts/LivIconsEvo/js/LivIconsEvo.defaults.js"></script>
<script asp-append-version="true" src="~/assets/fonts/LivIconsEvo/js/LivIconsEvo.min.js"></script>
<!-- BEGIN Vendor JS-->
<!-- BEGIN: Ali js-->
<script asp-append-version="true" src="~/assets/fontawesome-pro-5.8.2-web/js/fontawesome-pro-5.8.2.js"></script>
@*<script src="~/lib/toastr.js/toastr.min.js" asp-append-version="true"></script>*@
<!-- END: Ali js-->
<!-- BEGIN: Theme JS-->
<script asp-append-version="true" src="~/assets/js/scripts/configs/vertical-menu-dark.js"></script>
<script asp-append-version="true" src="~/assets/js/core/app-menu.js"></script>
<script asp-append-version="true" src="~/assets/js/core/app.js"></script>
<script asp-append-version="true" src="~/assets/js/scripts/components.js"></script>
<script asp-append-version="true" src="~/assets/js/scripts/footer.js"></script>
<script asp-append-version="true" src="~/assets/js/scripts/customizer.js"></script>
<!-- END: Theme JS-->
<!-- BEGIN: Page Vendor JS-->
<script asp-append-version="true" src="~/assets/vendors/js/ui/jquery.sticky.js"></script>

<script>
    let ajax = new ej.base.Ajax(location.origin + '/../../locale/fa.json','GET',false); // بارگزاری فایل فرهنگ و ترجمه
    ajax.send().then((e) => {
        let loader = JSON.parse(e);
        ej.base.L10n.load(
            loader
        );
        ej.base.setCulture('fa'); // فعال کردن 
    });
</script>


<!-- END: Page Vendor JS-->
@await RenderSectionAsync("AdminScripts", false)

<ejs-scripts></ejs-scripts>
</body>
<!-- END: Body-->
</html>